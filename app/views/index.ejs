<% include ./partials/header %>
    <div id='app' class="container text-center nopadding mx-auto">
        <h3>Welcome <span id='user'><%= currentUser.username%></span></h3>
        <div class="border my-1  notification-bar">
            <h5 id="joinee"></h5>

        </div>

    </div>
    <!-- Nav tabs -->
    <div class="container chat-app">
        <div class="row">
            <div class="col-md-3 nopadding">

                <div class="card text-white bg-dark">
                    <div class="card-header">

                        <h5 class="card-title text-center">Users <i class="fa fa-caret-down caret" data-toggle="collapse" data-target=".chats-name"></i></h5>
                    </div>
                    <div class="card-body chats-name">
                        <div class="nav flex-column nav-pills collapse" id="v-pills-tab" role="tablist">
                        </div>
                    </div>
                </div>

            </div>
            <div class="col-md-9 nopadding">
                <div class="chatBox-container">
                    <div class="tab-content" id="v-pills-tabContent">
                        <div class="card chatBox" style="display:none;" id='card'>
                            <div class="card-header">
                                <h4 id='Chatee' class="card-title text-center">Card Header</h4>
                                <div id="type" class="text-center h6">

                                </div>
                            </div>
                            <div class="card-body tab-content" id="card-body">
                                <div class="body-box"></div>
                            </div>
                            <div class="card-footer">
                                <div class="mx-auto panel-footer ">
                                    <form class="form-inline mx-auto my-2 ">
                                        <div class="form-group mx-sm-3  mb-2">
                                            <div class="input">
                                                <input type="text " class="form-control " id="Message" placeholder="Type your Message.. ">
                                            </div>

                                        </div>
                                        <button id="send" type="button" class="btn btn-primary mb-2 "><i class="fa fa-paper-plane"></i> </button>
                                    </form>
                                </div>
                            </div>
                        </div>
                    </div>
                    <div class="notification-bar w-75 h-10 mx-auto text-center " id="start-chat">
                        Click on the user to start the chat
                    </div>
                </div>
            </div>
        </div>
    </div>


    <script src="https://cdnjs.cloudflare.com/ajax/libs/socket.io/2.1.0/socket.io.js "></script>
    <script src="./Public/js/main.js " type="text/javascript "></script>

    <% include ./partials/footer %>